//- Table input
.panel.panel-default.results-table
  table.table.table-striped
    thead
      tr
        td.table-head-tag
        td.table-name Name
        td.table-upd Updated
        td.table-dl Downloads
    tbody
      tr(ng-repeat="item in packages | filter:query", ng-animate="'animate'")
        td.table-tag
        td.table-name {{namesForPackage(item)}}
        td.table-upd {{item.updated_at}}
        td.table-dl 19283
        td.table-dl {{item.url | withHost}}
